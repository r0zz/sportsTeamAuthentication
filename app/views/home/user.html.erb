<h1>Sports Teams</h1>
<h1 id='notice'><%= notice %></h1>
<p>My Saved Teams</p>
<% if @myteams.length > 0%>
<%= form_tag :action => 'removeTeams' do %>
<table>
  <thead>
    <tr>
      <th>Teamname</th>
      <th>City</th>
      <th>Stadium</th>
      <th>League</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @myteams.each do |sports_team| %>
      <tr>
        <td><%= check_box_tag sports_team.id, sports_team.id%></td>
        <td><%= sports_team.teamName %></td>
        <td><%= sports_team.city %></td>
        <td><%= sports_team.stadium %></td>
        <td><%= sports_team.league %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= submit_tag 'Save' %>
<% end %>
<%else%>
  <p>You have not saved any teams</p>
<%end%>

<p>All teams</p>
<p>Select favorite teams</p>
<%= form_tag :action => 'saveList' do %>
<table>
  <thead>
    <tr>
      <th>Teamname</th>
      <th>City</th>
      <th>Stadium</th>
      <th>League</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sports_teams.each do |sports_team| %>
      <tr>
        <td><%= check_box_tag sports_team.id, sports_team.id%></td>
        <td><%= sports_team.teamName %></td>
        <td><%= sports_team.city %></td>
        <td><%= sports_team.stadium %></td>
        <td><%= sports_team.league %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= submit_tag 'Save' %>
<% end %>